.ub-container
	.unboxed
		.logo
			= image_tag("unboxed_wp_full_logo.png")
		.content
			:markdown
				<p class="lead">
				We are currently in development mode.<br/> 
				Subscribe for a launch date notification! 		
				</p>
		.subscribe
			= form_tag "/subscribe", :method => :post, class: "subscribe-form", id: "ub-subscribe", remote: true do
				.input-append.control-group
					= email_field_tag "subscribe", "", placeholder: "your@email.com", name: "contact[email]"
					= button_tag "Notify me!", class: "btn btn-inverse notify"
	
